    "build:android:prod": "flutter build apk --release --dart-define=API_BASE_URL=https://api.gilabs.id",
    "build:ios:dev": "flutter build ios --dart-define=API_BASE_URL=http://localhost:8080",
    "build:ios:staging": "flutter build ios --dart-define=API_BASE_URL=https://api.gilabs.id",
    "build:ios:prod": "flutter build ios --release --dart-define=API_BASE_URL=https://api.gilabs.id",
